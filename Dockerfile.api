FROM python:3.13-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

WORKDIR /app

RUN pip install --no-cache-dir uv

COPY pyproject.toml uv.lock README.md ./
RUN uv sync --frozen

COPY src ./src
COPY scripts ./scripts

EXPOSE 8000

CMD ["uv", "run", "uvicorn", "agentic_rag.api.main:app", "--app-dir", "src", "--host", "0.0.0.0", "--port", "8000"]
